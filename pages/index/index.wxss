/**index.wxss**/
.container {
    height: 100vh;
    width: 100%;
    position: relative;
}

/* 加载状态样式 */
.loading-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}

.loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.loading-spinner {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 30rpx;
    border: 4rpx solid #f3f3f3;
    border-top: 4rpx solid #007aff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.loading-text {
    font-size: 32rpx;
    color: #666;
    text-align: center;
}

/* 错误状态样式 */
.error-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}

.error-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60rpx 40rpx;
}

.error-icon {
    font-size: 100rpx;
    margin-bottom: 40rpx;
    line-height: 1;
}

.error-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
    text-align: center;
}

.error-message {
    font-size: 28rpx;
    color: #666;
    text-align: center;
    margin-bottom: 60rpx;
    line-height: 1.5;
}

.retry-btn {
    background-color: #007aff;
    color: white;
    border: none;
    border-radius: 10rpx;
    padding: 20rpx 40rpx;
    font-size: 32rpx;
    min-width: 200rpx;
}

.retry-btn:active {
    background-color: #0056b3;
}

/* WebView 样式 */
web-view {
    width: 100%;
    height: 100vh;
    min-height: 100%;
    /* 适配安全区域 */
    height: calc(100vh - env(safe-area-inset-top) - env(safe-area-inset-bottom));
    /* 兼容旧版本 */
    height: calc(100vh - constant(safe-area-inset-top) - constant(safe-area-inset-bottom));
}